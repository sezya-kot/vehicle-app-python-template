{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "SeatAdjuster",
            "configurations": [
                "SeatAdjuster/vehicleapi",
                "SeatAdjuster/client"
            ]
        }
    ],    
    "configurations": [
        {
            "type": "python",
            "request": "launch",
            "name": "SeatAdjuster/client",
            "program": "${workspaceFolder}/src/run.py",
            "console": "integratedTerminal",
            "preLaunchTask": "daprd-debug-SeatAdjuster-run",
            "postDebugTask": "daprd-down-SeatAdjuster-run",
            "env": {
                "DAPR_GRPC_PORT":"50001"
            }
        },
        {
            "type": "python",
            "request": "launch",
            "name": "SeatAdjuster/vehicleapi",
            "program": "${workspaceFolder}/vehicleapi/vehicleapi.py",
            "console": "integratedTerminal",
            "preLaunchTask": "daprd-debug-SeatAdjuster-vehicleapi",
            "postDebugTask": "daprd-down-SeatAdjuster-vehicleapi"
        },
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Interactive Session",
            "type": "PowerShell",
            "request": "launch",
            "cwd": ""
        }        
    ]
}